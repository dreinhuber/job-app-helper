{
    "manifest_version": 3,
    "name": "Job App Helper",
    "version": "1.0",

    "description": "Job Application Assistant - stores application data in browser and pops up while you're filling out applications",

    "icons": {
        "48": "icons/border-48.png"
    },

    "homepage_url": "https://github.com/dreinhuber/job-app-helper",
    "action": {
        "default_popup": "public/index.html",
        "default_title": "Job App Helper",
        "default_icon": "icons/border-48.png"
    }
}